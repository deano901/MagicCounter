<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.magiccounter.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/magic"
        android:scaleType="fitXY"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose number of players"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="20sp"
        android:textColor="@android:color/white"/>
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Player"
        android:layout_marginTop="20sp"
        android:id="@+id/Player1"
        android:onClick="player"
        />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Player"
        android:layout_marginTop="20sp"
        />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Player"
        android:layout_marginTop="20sp"
        />
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDH Rules"
            android:textColor="@android:color/white"    />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:background="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn Counter"
                android:textColor="@android:color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:background="@android:color/white"/>

             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poison"
            android:textColor="@android:color/white"        />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:background="@android:color/white"/>
           </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="Current leaderboard" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add next game to leaderboards"
                android:textColor="@android:color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:background="@android:color/white"/>
        </LinearLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
